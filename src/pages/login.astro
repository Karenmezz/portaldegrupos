---
import Layout from "../layouts/Layout.astro";

import "@css/login.css";
---

<Layout title="Iniciar sesión">
  <main class="login-wrapper">
    <div class="login-container">
      <div class="login-card">
        <h1 class="login-title">Iniciar sesión</h1>
        <p class="login-description">
          Ingresa tus credenciales para acceder al área privada del grupo de investigación
        </p>

        <form>
          <div class="form-group">
            <label for="email">Correo electrónico</label>
            <div class="input-icon">
              <input
                type="email"
                id="email"
                name="email"
                placeholder="tu.correo@universidad.es"
                required
              />
            </div>
          </div>

          <div class="form-group">
            <label for="password">Contraseña</label>
            <div class="input-icon">
              <input
                type="password"
                id="password"
                name="password"
                placeholder="••••••••"
                required
              />
            </div>
            <a class="forgot-link" href="#">¿Olvidaste tu contraseña?</a>
          </div>

          <div class="form-remember">
            <input type="checkbox" id="remember" />
            <label for="remember">Recordar mis datos</label>
          </div>

          <button type="submit" class="login-button">Iniciar sesión</button>
        </form>

        <p class="login-note">
          Acceso exclusivo para miembros del grupo de investigación
        </p>
      </div>
    </div>
  </main>
</Layout>
