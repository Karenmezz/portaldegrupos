---
import Layout from "../layouts/Layout.astro";
import "@css/login.css";
---

<Layout title="√Årea de miembros">
  <main class="login-wrapper">
    <div class="login-container">
      <!-- üîò Botones arriba con estilo tipo tabs -->
      <div class="toggle-buttons">
        <button id="btnLogin" class="toggle-button active">Iniciar sesi√≥n</button>
        <button id="btnAccess" class="toggle-button">Solicitar acceso</button>
      </div>

      <!-- üîê FORMULARIO DE LOGIN -->
      <div id="loginForm" class="login-card">
        <h1 class="login-title">√Årea de miembros</h1>
        <p class="login-description">Ingresa tus credenciales para acceder al √°rea privada del grupo de investigaci√≥n</p>

        <form>
          <div class="form-group">
            <label for="email">Correo electr√≥nico</label>
            <div class="input-icon">
              <input type="email" id="email" name="email" placeholder="tu.correo@universidad.es" required />
            </div>
          </div>

          <div class="form-group">
            <label for="password">Contrase√±a</label>
            <div class="input-icon">
              <input type="password" id="password" name="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required />
            </div>
            <a class="forgot-link" href="#">¬øOlvidaste tu contrase√±a?</a>
          </div>

          <div class="form-remember">
            <input type="checkbox" id="remember" />
            <label for="remember">Recordar mis datos</label>
          </div>

          <button type="submit" class="login-button">Iniciar sesi√≥n</button>
        </form>

        <p class="login-note">Acceso exclusivo para miembros del grupo de investigaci√≥n</p>
      </div>

      <!-- üìÑ FORMULARIO DE SOLICITAR ACCESO -->
      <div id="accessForm" class="login-card" style="display: none;">
        <h1 class="login-title">Solicitar acceso</h1>
        <p class="login-description">Completa el formulario para solicitar acceso al √°rea privada</p>

        <form>
          <div class="form-group">
            <label for="fullname">Nombre completo</label>
            <div class="input-icon">
              <input type="text" id="fullname" name="fullname" placeholder="Nombre y apellidos" required />
            </div>
          </div>

          <div class="form-group">
            <label for="institutionalEmail">Correo institucional</label>
            <div class="input-icon">
              <input type="email" id="institutionalEmail" name="institutionalEmail" placeholder="tu.correo@universidad.es" required />
            </div>
          </div>

          <div class="form-group">
            <label for="department">Departamento o instituci√≥n</label>
            <div class="input-icon">
              <input type="text" id="department" name="department" placeholder="Ej: Departamento de F√≠sica Aplicada" required />
            </div>
          </div>

          <div class="form-group">
            <label for="reason">Motivo de la solicitud</label>
            <div class="input-icon">
              <textarea id="reason" name="reason" class="textarea-large" placeholder="Describe brevemente el motivo por el que solicitas acceso" rows="3" required></textarea>
            </div>
          </div>

          <button type="submit" class="login-button">Enviar solicitud</button>
        </form>

        <p class="login-note">Tu solicitud ser√° revisada por el administrador del grupo</p>
      </div>
    </div>
  </main>

  <!-- üß† JavaScript plano -->
  <script is:inline>
    document.getElementById("btnLogin").addEventListener("click", () => {
      document.getElementById("loginForm").style.display = "block";
      document.getElementById("accessForm").style.display = "none";

      document.getElementById("btnLogin").classList.add("active");
      document.getElementById("btnAccess").classList.remove("active");
    });

    document.getElementById("btnAccess").addEventListener("click", () => {
      document.getElementById("loginForm").style.display = "none";
      document.getElementById("accessForm").style.display = "block";

      document.getElementById("btnAccess").classList.add("active");
      document.getElementById("btnLogin").classList.remove("active");
    });
  </script>

</Layout>
