<script>
  // Esperar a que el DOM esté completamente cargado
  document.addEventListener('DOMContentLoaded', function() {
    // Seleccionar todos los tabs
    const tabs = document.querySelectorAll('.tab');
    
    // Añadir event listener a cada tab
    tabs.forEach(tab => {
      tab.addEventListener('click', function() {
        // Obtener el índice del tab clickeado
        const tabIndex = this.getAttribute('data-tab');
        
        // Remover clase active de todos los tabs
        tabs.forEach(t => t.classList.remove('active'));
        
        // Añadir clase active al tab clickeado
        this.classList.add('active');
        
        // Seleccionar todos los contenidos
        const contents = document.querySelectorAll('.tab-content');
        
        // Remover clase active de todos los contenidos
        contents.forEach(content => content.classList.remove('active'));
        
        // Añadir clase active al contenido correspondiente
        contents[tabIndex].classList.add('active');
      });
    });
  });
</script>
