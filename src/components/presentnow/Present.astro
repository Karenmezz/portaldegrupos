  <script>
    // Esperar a que el DOM esté completamente cargado
    document.addEventListener('DOMContentLoaded', function() {
      // Variables globales
      const tabButtons = document.querySelectorAll('.tab-btn');
      const tabContents = document.querySelectorAll('.tab-content');
      const searchInput = document.getElementById('search-input');
      const categoryFilter = document.getElementById('category-filter');
      const dateFilter = document.getElementById('date-filter');
      
      // Función para cambiar de pestaña
      function switchTab(tabId) {
        // Actualizar botones de pestaña
        tabButtons.forEach(button => {
          if (button.dataset.tab === tabId) {
            button.classList.add('active');
          } else {
            button.classList.remove('active');
          }
        });
        
        // Actualizar contenido de pestañas
        tabContents.forEach(content => {
          if (content.id === `${tabId}-content`) {
            content.classList.add('active');
          } else {
            content.classList.remove('active');
          }
        });
      }
      
      // Event listeners para los botones de pestaña
      tabButtons.forEach(button => {
        button.addEventListener('click', function() {
          const tabId = this.dataset.tab;
          switchTab(tabId);
          
          // Guardar la pestaña activa en localStorage
          localStorage.setItem('activeTab', tabId);
        });
      });
      
      // Función para filtrar contenido
      function filterContent() {
        const searchTerm = searchInput.value.toLowerCase();
        const category = categoryFilter.value;
        const date = dateFilter.value;
        
        // Determinar qué pestaña está activa
        const activeTab = document.querySelector('.tab-btn.active').dataset.tab;
        const items = document.querySelectorAll(`#${activeTab}-content .news-card, #${activeTab}-content .event-card, #${activeTab}-content .pub-card`);
        
        items.forEach(item => {
          const title = item.querySelector('h3').textContent.toLowerCase();
          const text = item.textContent.toLowerCase();
          const itemCategory = item.querySelector('.news-badge, .event-type, .pub-badge')?.textContent.toLowerCase() || '';
          const itemDate = item.querySelector('.news-date, .event-date')?.textContent.toLowerCase() || '';
          
          // Aplicar filtros
          const matchesSearch = title.includes(searchTerm) || text.includes(searchTerm);
          const matchesCategory = category === 'todas' || itemCategory.includes(category);
          let matchesDate = true;
          
          if (date !== 'todas') {
            const today = new Date();
            const itemDateObj = new Date(itemDate);
            
            if (date === 'hoy') {
              matchesDate = itemDateObj.toDateString() === today.toDateString();
            } else if (date === 'semana') {
              const nextWeek = new Date();
              nextWeek.setDate(today.getDate() + 7);
              matchesDate = itemDateObj >= today && itemDateObj <= nextWeek;
            } else if (date === 'mes') {
              const nextMonth = new Date();
              nextMonth.setMonth(today.getMonth() + 1);
              matchesDate = itemDateObj >= today && itemDateObj <= nextMonth;
            }
          }
          
          // Mostrar u ocultar según los filtros
          if (matchesSearch && matchesCategory && matchesDate) {
            item.style.display = 'flex';
          } else {
            item.style.display = 'none';
          }
        });
      }
      
      // Event listeners para los filtros
      searchInput.addEventListener('input', filterContent);
      categoryFilter.addEventListener('change', filterContent);
      dateFilter.addEventListener('change', filterContent);
      
      // Restaurar pestaña activa desde localStorage
      const savedTab = localStorage.getItem('activeTab') || 'noticias';
      switchTab(savedTab);
      
      // Simular carga de datos (en un caso real sería una llamada API)
      function simulateLoading() {
        const loadingElements = document.querySelectorAll('.news-card, .event-card, .pub-card');
        
        loadingElements.forEach((element, index) => {
          setTimeout(() => {
            element.style.opacity = '1';
            element.style.transform = 'translateY(0)';
          }, index * 100);
        });
      }
      
      // Iniciar animación de carga
      setTimeout(simulateLoading, 500);
      
      // Botones "Leer más" y "Más información"
      document.addEventListener('click', function(e) {
        if (e.target.classList.contains('read-more') || 
            e.target.classList.contains('event-btn') || 
            e.target.classList.contains('pub-btn')) {
          // En una aplicación real, esto redirigiría a la página correspondiente
          alert('En una aplicación real, esto llevaría a la página de detalle');
          e.preventDefault();
        }
      });
      
      // Formulario de suscripción
      const subscribeForm = document.querySelector('.subscribe-form');
      subscribeForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const emailInput = this.querySelector('input[type="email"]');
        const email = emailInput.value;
        
        if (email && email.includes('@')) {
          alert(`Gracias por suscribirte con el email: ${email}`);
          emailInput.value = '';
        } else {
          alert('Por favor ingresa un email válido');
        }
      });
    });
