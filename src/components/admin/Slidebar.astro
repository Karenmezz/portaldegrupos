---
import "@components/admin/Admin.astro";
import "@css/admin.css";
---

<!-- Secci칩n BANNERS -->
<div id="section-banners" class="main-section" style="display: none;">
  <div class="main-content">
    <h1>Gesti칩n de Banners</h1>
    <p>Administra los banners promocionales de tu sitio web.</p>
  </div>
</div>

<aside>
  <button data-section="section-contenido">Contenido</button>
  <button data-section="section-banners">Configurar pagina</button>
  <button data-section="section-miembr">Administrar miembros</button>
  <button data-section="section-menus">Habilitar menus</button>
  <button data-section="section-desing">Cambio de dise침o</button>
</aside>

<script>
  const botones = document.querySelectorAll('aside button');
  const secciones = document.querySelectorAll('.main-section');

  botones.forEach((btn) => {
    btn.addEventListener('click', () => {
      // Quitar clase 'active' de todos los botones
      botones.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // Ocultar todas las secciones
      secciones.forEach(sec => (sec as HTMLElement).style.display = 'none');

      // Mostrar la secci칩n correspondiente
      const idSeccion = btn.getAttribute('data-section') || '';
      const seccionMostrar = document.getElementById(idSeccion);
      if (seccionMostrar) {
        (seccionMostrar as HTMLElement).style.display = 'block';
      }
    });
  });
</script>