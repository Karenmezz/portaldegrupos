      height: 200px;
      object-fit: cover;
    }

    .news-card-content {
      padding: 20px;
    }

    .news-card h3 {
      font-size: 1.5rem;
      margin-bottom: 10px;
    }

    .news-card p {
      font-size: 1rem;
      color: #666;
      margin-bottom: 20px;
    }

    .news-card a {
