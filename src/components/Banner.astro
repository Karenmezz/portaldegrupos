      height: 400px;
      overflow: hidden;
    }

    .Fondo {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      transition: opacity 1s ease;
    }

    .Fondo.active {
