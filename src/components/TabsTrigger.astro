---
// TabsTrigger.astro
const { label, onClick, className = "" } = Astro.props;
---

<button class={`tabs-trigger ${className}`}
 onClick={onClick}>
  {label}
</button>

<style>
  .tabs-trigger {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    font-weight: 400;
    border: 0.5px solid #ccc;
    background-color: white;
    color: black;
    border-radius: 5px;
    cursor: pointer;
    transition:
      background-color 0.2s,
      border-color 0.2s,
      color 0.2s;
    text-decoration: none;
    flex: 1;
  }

  .tabs-trigger:hover {
    background-color: #f0f0f0;
    border-color: #999999;
  }

  .tabs-trigger.active {
    background-color: #f0f0f0;
    color: black;
  }
</style>
